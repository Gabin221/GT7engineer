<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#EEEEEE"
    android:layout_marginTop="8dp">

    <Spinner
        android:id="@+id/spinner_type_admission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/types_admission" />

    <Spinner
        android:id="@+id/spinner_regime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/types_regime"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/input_puissance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Puissance (ch)"
        android:inputType="number" />

    <EditText
        android:id="@+id/input_couple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Couple (Nm)"
        android:inputType="number" />
</LinearLayout>
